      <div class="pagetitle">
        <h1>상품등록</h1>
      </div><!-- End Page Title -->
  
      <section class="section">
        <div class="row">
          <div class="col-lg-6">
  
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">등록할 상품의 정보를 입력하세요</h5>
  
                <!-- General Form Elements -->
                <form action="register/insert" method="post" enctype="multipart/form-data" autocomplete="off" accept-charset="UTF-8" id="insertProduct">
                  <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">상품명</label>
                    <div class="col-sm-10">
                      <input name="prdtName" type="text" class="form-control" required>
                    </div>
                  </div>
  
                  <div class="row mb-3">
                    <label for="inputPassword" class="col-sm-2 col-form-label">상품내용</label>
                    <div class="col-sm-10">
                      <!-- <textarea id="editor" name="prdtContent" class="form-control" style="height: 100px" required></textarea> --> <!--CKEDitor-->
                      <textarea name="prdtContent" class="form-control" style="height: 100px" required></textarea>
                    </div>
                  </div>
  
                  <div class="row mb-3">
                    <label for="inputNumber" class="col-sm-2 col-form-label">수량/KG</label>
                    <div class="col-sm-10">
                      <input name="prdtCnt" type="number" class="form-control" required>
                    </div>
                  </div>
  
                  <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">가격</label>
                    <div class="col-sm-10">
                      <input name="prdtPrice" type="text" class="form-control" required>
                    </div>
                  </div>
  
                  <div class="row mb-3">
                    <label for="inputDate" class="col-sm-2 col-form-label">수확일</label>
                    <div class="col-sm-10">
                      <input name="prdtDate" type="date" class="form-control" required>
                    </div>
                  </div>
  
                  <div class="row mb-3">
                    <label for="inputNumber" class="col-sm-2 col-form-label">대표사진</label>
                    <div class="col-sm-10">
                      <input name="prdtImg" class="form-control" type="file" accept="image/*" required onchange="readURL(this);" >
                    </div>
                    
                  </div>
  
                  <div class="row mb-3">
                    <label for="inputNumber" class="col-sm-2 col-form-label">추가사진</label>
                    <div class="col-sm-10">
                      <input name="prdtImg" class="form-control" type="file" accept="image/*" required onchange="readURL1(this);" >
                      <input name="prdtImg" class="form-control" type="file" accept="image/*" required onchange="readURL2(this);" >
                      <input name="prdtImg" class="form-control" type="file" accept="image/*" required onchange="readURL3(this);" >
                    </div>
                    
                  </div>
                  
                  <button type="submit" id="insert_btn" class="btn btn-primary">등록</button>
                </form><!-- End General Form Elements -->
              </div>
            </div>
  
          </div>
          <!--이미지 미리보기-->
          <div class="col-lg-3">
  
            <!-- Card with an image on top -->
            <div class="card">
              <img id="preview" src="" alt="">
              <img id="preview1" src="" alt="">
              <img id="preview2" src="" alt="">
              <img id="preview3" src="" alt="">
            </div><!-- End Card with an image on top -->
  
          </div>
  
        </div>
      </section>
  
